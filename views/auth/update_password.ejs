<% include ../partials/header %>

<form action="/update_password" method="POST" class="form">
    <h1 class="form-title">Update Password</h1>
    <div class="form-group">
        <p class="form-label">Old Password</p>
        <input type="password" class="form-input" name="old_password">
    </div>
    <div class="form-group">
        <p class="form-label">New Password</p>
        <input type="password" class="form-input" name="new_password">
    </div>
    <div class="form-group">
        <input class="form-submit" type="submit" value="submit">
    </div>
    <a href="/account" class="form-btn-sm">Back</a>
</form>

<% include ../partials/footer %>
